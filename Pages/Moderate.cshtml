@page
@model Proj_Frame.Pages.ModerateModel
@{
}
<html>
    <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width = device-width,initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/ModerationStyle.css" />
    

    </head>



<body>
<!--at if-->
 <!--(Model.NoResultsFound)-->

{
    <p>No files found for the subject</p>
}

else
{
    <p>List of files:</p>
    <table class="table">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <!--at foreach--> <!--(var file in Model.FileList)-->
            {
                <tr>
                    <td></td>
                    <td>
                        <!-- Download button -->
                        <form method="post" asp-page-handler="Download" asp-route-fileName="" style="display:inline;">
                            <button type="submit" class="btn btn-primary">Download</button>
                        </form>

                        <!-- Delete button -->
                        <form method="post" asp-page-handler="Delete" asp-route-fileName="" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this file?');" class="btn btn-danger">Delete</button>
                        </form>
                        <!--Allow button-->
                        <form method="post" asp-page-handler="Allow" asp-route-fileName="" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to allow this file?');" class="btn btn-danger">Allow</button>
                        </form>
                        

                    </td>
                </tr>
            }
        </tbody>
    </table>

}
</body>

</html>